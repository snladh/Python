# function to find out if the number is prime or not
def fprime(num):
    i=2
    condition=0 
    while i<=num/2:
        if num%i==0:
            condition=1
            break
        i=i+1
    if condition==1:
        print("The number",num,"is not prime.")
    else:
        print("The number",num,"is prime.")

a = int(input("Insert a number to find if it is prime or not."))
fprime(a)
